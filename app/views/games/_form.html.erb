<%= form_with(model: [@team, game]) do |form| %>
  <% if game.errors.any? %>
    <div style="color: red; margin-bottom: 20px;">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>
      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :time %>
    <%= form.time_field :time %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :opponent %>
    <%= form.text_field :opponent, placeholder: "Opponent team name" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :location %>
    <%= form.text_field :location, placeholder: "Game location" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :home_away, "Home or Away?" %>
    <%= form.select :home_away, [['Home Team', 'home'], ['Away Team', 'away']], {} %>
  </div>

  <div>
    <%= form.submit style: "padding: 10px 20px; background: #2196F3; color: white; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>