<h1>Games</h1>

<%= link_to "Create New Game", new_game_path %>

<% if @games.any? %>
	<table>
		<thead>
			<tr>
				<th>Date</th>
				<th>Time</th>
				<th>Home Team</th>
				<th>Away Team</th>
				<th>Location</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @games.each do |game| %>
				<tr>
					<td><%= game.date.strftime("%B %d, %Y") %></td>
					<td><%= game.time.strftime("%I :%M %p") %></td>
					<td><%= game.home_team&.name || "Unknown Team" %></td>
					<td><%= game.away_team&.name || "Unknown Team" %></td>
					<!-- <td> game.home_team.name </td> -->
					<!-- <td> game.away_team.name </td> -->
					<td><%= game.location %></td>
					<td>
						<%= link_to "Show", game %> |
						<%= link_to "Edit", edit_game_path(game) %> |
						<%= button_to "Delete", game, method: :delete, data: { confirm: "Are you sure?" } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>No games scheduled yet.</p>
<% end %>